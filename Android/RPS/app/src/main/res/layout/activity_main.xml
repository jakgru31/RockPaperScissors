<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/welcomeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/buttonRock"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Rock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonPaper"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="64dp" />

    <Button
        android:id="@+id/buttonPaper"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Paper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonRock"
        app:layout_constraintEnd_toStartOf="@+id/buttonScissors"
        android:layout_marginBottom="64dp" />

    <Button
        android:id="@+id/buttonScissors"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Scissors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonPaper"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="64dp" />

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result Choice"
        app:layout_constraintTop_toBottomOf="@+id/playerchoiceTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/aichoiceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Choice"
        app:layout_constraintTop_toBottomOf="@+id/resultTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/playerchoiceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Choice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp" />

</androidx.constraintlayout.widget.ConstraintLayout>